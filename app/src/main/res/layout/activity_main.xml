<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2e89b3"
    android:layout_height="match_parent"
    tools:context="com.example.ishtiak.weatherapplication.MainActivity">


    <TextView
        android:id="@+id/cityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spokane, US"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/thumbnailIcon"
        android:layout_width="100dp"
        android:layout_below="@id/cityText"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_below="@id/cityText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:text="12 Deg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/thumbnailIcon"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/windText"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Wind"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="176dp" />

        <TextView
            android:id="@+id/cloudText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="246dp" />

        <TextView
            android:id="@+id/pressureTxt"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Pressure"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="378dp" />

        <TextView
            android:id="@+id/humidityText"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="306dp"
            tools:layout_editor_absoluteX="16dp" />
        <TextView
            android:id="@+id/sunriseText"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Sunrise"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="306dp"
            tools:layout_editor_absoluteX="16dp" />
        <TextView
            android:id="@+id/sunsetText"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Sunset"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="306dp"
            tools:layout_editor_absoluteX="16dp" />
        <TextView
            android:id="@+id/lastUpdateText"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Last Update"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="306dp"
            tools:layout_editor_absoluteX="16dp" />

    </LinearLayout>
</RelativeLayout>
